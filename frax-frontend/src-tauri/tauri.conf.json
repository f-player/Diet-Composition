{
  "productName": "frax-frontend",
  "version": "0.1.0",
  "identifier": "org.fraxcalculator.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "https://localhost:3000",
    "beforeDevCommand": "npm run dev", 
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Diet Composition Calculator",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' http://79.127.211.218:8080 http://localhost:8080; connect-src 'self' http://79.127.211.218:8080 http://localhost:8080"
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "http": {
      "scope": ["http://79.127.211.218:8080/**", "http://localhost:8080/**"],
      "dangerousAcceptAnyServerCertificate": true
    }
  }
}